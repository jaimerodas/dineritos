<header class="simple">
  <h1>Agregar Saldos Faltantes</h1>
</header>

<% if @accounts.any? %>
<table>
  <tbody>
    <% @accounts.each do |account| %>
    <tr>
      <td>
        <%= link_to account.name, new_account_account_balance_path(account.id) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h2>No hay saldos faltantes para hoy</h2>
<% end %>

