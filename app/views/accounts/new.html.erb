<header class="simple">
  <h1>Agregar Cuenta</h1>
</header>

<%= form_for @account do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :currency %>
    <%= f.select :currency, ["MXN", "USD"] %>
  </div>

  <%= f.button %>
<% end %>

<section class="actions">
  <%= link_to 'Cancelar', accounts_path %>
</section>
