<% content_for :article do %>
<article
  class="investments"
  data-controller="investments"
  data-investments-summary-url="<%= investments_summary_path(format: :html) %>"
  data-investments-chart-url="/graficas/">

  <aside>
    <%= summary_buttons %>
    <section id="investmentSummary" data-investments-target="summary" data-earliest-year="<%= @summary.earliest_year %>" data-current-year="past_year">
      <%= render "shared/investments_summary" %>
    </section>
  </aside>

  <main>
    <div
      id="investment-charts-nav"
      class="chart-toggle"
      data-investments-target="chartButtons"></div>
    <section id="charts">
      <script type="text/javascript">
        var data = <%= @report.to_json.html_safe %>
      </script>
      <div id="chart-container" data-investments-target="chart"></div>
    </section>
  </main>
</article>
<% end %>
