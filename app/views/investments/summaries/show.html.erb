<dl class="investment-summary">
  <dt>Saldo Actual</dt>
  <dd><%= number_to_currency @summary.final_balance %></dd>

  <dt>Saldo Inicial</dt>
  <dd><%= number_to_currency @summary.starting_balance %></dd>

  <dt>Ganancias</dt>
  <dd><%= number_to_currency @summary.earnings %></dd>

  <dt>Inversión Neta</dt>
  <dd><%= number_to_currency @summary.net_investment %></dd>

  <dt>Depósitos</dt>
  <dd><%= number_to_currency @summary.deposits %></dd>

  <dt>Retiros</dt>
  <dd><%= number_to_currency @summary.withdrawals %></dd>

  <dt>TIR</dt>
  <dd><%= number_to_percentage @summary.irr * 100, precision: 2 %></dd>
</dl>
