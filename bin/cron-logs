#!/bin/bash
set -e

SERVER_HOST=$(ruby -ryaml -e "puts YAML.safe_load_file('config/deploy.yml', aliases: true)['servers']['web']['hosts'].first")

if [ "$1" = "-f" ]; then
  ssh root@$SERVER_HOST "tail -f /var/log/dineritos-cron.log"
else
  ssh root@$SERVER_HOST "tail -n 100 /var/log/dineritos-cron.log"
fi
